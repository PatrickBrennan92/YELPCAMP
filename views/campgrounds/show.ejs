<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%=camp.image%>" class="card-img-top" alt="Image of camp">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><small class="muted"><%=camp.location%></small></li>
                    <li class="list-group-item">Price: $
                        <%=camp.price%> / night
                    </li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-warning" href="/campgrounds">All Camps</a>
                    <a class="btn btn-info" href="/campgrounds/<%=camp._id%>/edit">edit</a>
                    <form style="display: inline;" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-6">
            <h2>Leave a review!</h2>
            <form action="/campgrounds/<%=camp._id%>/review" method="POST" class=" needs-validation mb-3" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating:</label>
                    <input class="form-range" min="1" max="5" type="range" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review:</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
            <h3>Reviews:</h3>
            <%for (review of camp.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="card-title">
                            <%=review.rating%> Stars
                        </h3>
                        <p class="card-text">
                            <%=review.body%>
                        </p>
                        <form action="/campgrounds/<%=camp._id%>/review/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% }%>
        </div>

    </div>