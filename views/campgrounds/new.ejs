<% layout("/layouts/boilerplate.ejs") %>
    <h1>New Campgrounds</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Camp Name: </label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <div>
            <label for="price">Price: </label>
            <input type="text" name="campground[price]" id="price">
        </div>
        <button>Add Campground</button>
        <a href="/campgrounds">back</a>
    </form>