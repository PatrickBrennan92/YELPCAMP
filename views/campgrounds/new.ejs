<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Camp Name: </label>
                    <input class="form-control" type="text" name="campground[title]" id="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="location">
                </div>
                <div class=" input-group mb-3">
                    <label class="input-group form-label" for="price">Price: </label>
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="text" name="campground[price]" id="price" aria-describedby="price-label" placeholder="0.00">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="campground[image]" id="image">
                </div>
                <button class="btn btn-success">Add Campground</button>
                <a class="btn btn-danger" href="/campgrounds">back</a>
            </form>
        </div>
    </div>